<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"


        android:fontFamily="@font/neuropol"
        android:text="@string/home"
        android:textColor="@color/Inchworm"
        android:textSize="40sp" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.home.punctualitymaster.OptionList"
        android:layout = "@layout/fragment_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        tools:layout="@layout/fragment_list_view" />

</RelativeLayout>